{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/auth/google",
      "dest": "/api/index.js"
    },
    {
      "src": "/auth/google/callback",
      "dest": "/api/index.js"
    },
    {
      "src": "/analysis",
      "dest": "/dist/index.html"
    },
    {
      "src": "/dashboard",
      "dest": "/dist/index.html"
    },
    {
      "src": "/saved-jobs",
      "dest": "/dist/index.html"
    },
    {
      "src": "/auth",
      "dest": "/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 